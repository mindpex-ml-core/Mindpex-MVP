'use client'

import { useState } from 'react'
import Link from 'next/link'
import { usePathname } from 'next/navigation'
import {
  LayoutDashboard,
  Target,
  Users,
  TrendingUp,
  ChevronLeft,
  ChevronRight
} from 'lucide-react'

const navigation = [
  { name: 'Dashboard', href: '/dashboard', icon: LayoutDashboard },
  { name: 'Competency Models', href: '/competency', icon: Target },
  { name: 'Employee Directory', href: '/employees', icon: Users },
  { name: 'Succession/Risk', href: '/succession', icon: TrendingUp },
]

export default function Sidebar() {
  const [collapsed, setCollapsed] = useState(false)
  const pathname = usePathname()

  return (
    <div className={`bg-gradient-to-b from-[#000000] to-[#1a1a1a] transition-all duration-300 ${collapsed ? 'w-16' : 'w-64'} flex flex-col h-screen border-r-2 border-[#B58342]/20`}>
      {/* Header */}
      <div className="p-4 border-b-2 border-[#B58342]/20">
        <div className="flex items-center justify-between">
          {!collapsed && (
            <div>
              <h1 className="text-xl font-bold text-white">Mindpex</h1>
              <p className="text-xs text-[#B58342] mt-0.5">Intelligence Platform</p>
            </div>
          )}
          <button
            onClick={() => setCollapsed(!collapsed)}
            className="p-1.5 rounded-lg hover:bg-[#B58342]/20 transition-colors"
          >
            {collapsed ? <ChevronRight className="h-4 w-4 text-white" /> : <ChevronLeft className="h-4 w-4 text-white" />}
          </button>
        </div>
      </div>

      {/* Navigation */}
      <nav className="flex-1 p-4 space-y-2">
        {navigation.map((item) => {
          const isActive = pathname === item.href
          return (
            <Link
              key={item.name}
              href={item.href}
              className={`flex items-center space-x-3 px-3 py-2 rounded-lg transition-all ${
                isActive
                  ? 'bg-[#B58342] text-white shadow-lg'
                  : 'text-slate-300 hover:bg-white/10 hover:text-white'
              }`}
            >
              <item.icon className="h-5 w-5 flex-shrink-0" />
              {!collapsed && <span className="font-medium">{item.name}</span>}
            </Link>
          )
        })}
      </nav>

    </div>
  )
}
